package hw1;

public class question01 {

	public static void main(String[] args) {
		//String type = "industry"; //type.equals("industry")	 	//industry A跋だaxHのu~ノq
		int type = 0 ;
		double electricity = 100;		//ノq准
		double industryDegree = 0.45;
		double homeDegree240 = 0.15;
		double homeDegree241540 = 0.25;
		double homeDegree541 = 0.45;
		double value = 0;
		if (type == 1) {			//u~ノq摸O
												//switchLkㄏノboolean
			value = electricity * industryDegree;	//p衡qOAqO = Ov * 准 
			System.out.printf("u~准片啊G%d住AqO`p%.4fじ%n", electricity, value);	//陪ボu~ノq准

		}else{		//axノq
			if (electricity <= 240) {		//准痞b 240 HU
				value = electricity * homeDegree240;	//p衡qOAqO = Ov * 准
			}else {
				value = (electricity - 240) * homeDegree240 + (electricity -240) * homeDegree241540 
			}
			System.out.printf("ax准片啊G%f住AqO`p%.4fじ",electricity, value);	//陪ボaxノq准
			
		}

	}

}
