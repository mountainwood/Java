package hw1;

public class question04 {

	public static void main(String[] args) {
		double hr = 2;					//p杉
		double salary = 120;			//闪~
		double eSalary60 = 1;			//60p嗓邯酣t计
		double eSalary6180 = 1.25;		//6180p瑟酣t计
		double eSalary81 = 1.5;			//81HW酣t计
		double sumSalary = 0;
		
		if (hr < 60) {		//60p嗓
			sumSalary = hr * eSalary60 * salary;
		}else {		//杉片 61HW
			if(hr > 80) {		////杉片81HW
				sumSalary = ((hr - 80) * eSalary81 + 20 * eSalary81 + 60 * eSalary60) * salary;
			}else {
				sumSalary = (20 * eSalary81 + 60 * eSalary60) * salary;
			}
		}

			System.out.printf("u@%.2fp伞A~袅`pG%.2fじ", hr, sumSalary);
		

	}

}
