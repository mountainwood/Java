package com.iii.cb101.mt;

public class printDEMO {
	public static void main(String[] args) {	
	System.out.printf("-%5d-%n", 123);				//-  123-
	System.out.printf("-%+5d-%n", 123);				//- +123-
	System.out.printf("-%X-%n", 123);				//-7B-
	System.out.printf("-%#X-%n", 123);				//-0X7B-
	System.out.printf("-%f-%n", 123.678);			//-123.678000-
	System.out.printf("-%10.2f-%n", 123.678);		//-    123.68-
	System.out.printf("-%-10.1f-%n", 12.678);		//-12.7      -
	System.out.printf("-%010.2f-%n", 123.678);		//-0000123.68-
	System.out.printf("-%10.2E-%n", 123.678);		//-  1.24E+02-
	System.out.printf("-%,10.2f-%n", 123.678);		//-    123.68-
	System.out.printf("-%(10.1f-%n", 123.678);		//-     123.7-
	System.out.printf("-%10s-%n", 123.678);			//-   123.678-
	
	}
}
